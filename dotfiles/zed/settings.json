// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zedf
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)

{
  // ################################################################
  // AI-related stuff
  // ################################################################
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gemini-2.5-pro"
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gemini-2.5-pro"
    },

    "enable_feedback": false,
    "profiles": {}
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "edit_predictions": {
    "mode": "subtle"
  },

  // ################################################################
  // UI customization
  // ################################################################

  // Themes
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Macchiato"
  },
  "icon_theme": "Catppuccin Latte",

  // General font size
  "ui_font_size": 16,
  "ui_font_weight": 400,
  "ui_font_family": "Roboto Flex",
  // Editor font size
  "buffer_font_size": 15,
  "buffer_font_weight": 400,
  "buffer_font_family": "JetBrains Mono",
  "buffer_line_height": "standard",
  "gutter": {
    // 3 digits is actually enough to display 4
    "min_line_number_digits": 3
  },
  "minimap": {
    "show": "auto",
    "current_line_highlight": "all"
  },

  "scrollbar": {
    "show": "auto"
  },

  // Terminal settings
  "terminal": {
    "blinking": "on",
    "cursor_shape": "bar",
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 13,
    "font_weight": 600,
    "font_features": { "calt": true },
    "line_height": { "custom": 1.45 }
  },

  // Project panel
  "project_panel": {
    "dock": "left",
    "entry_spacing": "standard",
    "indent_size": 15
  },

  // Git panel
  "git_panel": {
    "dock": "right"
  },

  "experimental.theme_overrides": {
    "status_bar.background": "#3a1254"
  },

  // ################################################################
  // Language-specific
  // ################################################################
  "extend_comment_on_newline": false,
  "file_types": {
    "Shell Script": ["*.zsh-theme"]
  },
  "languages": {
    "Python": {
      "language_servers": ["basedpyright", "ruff"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports.ruff": true
      },
      "formatter": [{ "language_server": { "name": "ruff" } }]
    }
  },

  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 110,
          "lint": { "extendSelect": ["I"] }
        }
      }
    }
  },

  // ################################################################
  // General
  // ################################################################
  // Extensions
  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin-icons": true,

    "dockerfile": true,
    "git-firefly": true,
    "html": true,
    "ini": true,
    "lua": true,
    "terraform": true,
    "toml": true
  },

  // Send only crash reports
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  }
}
