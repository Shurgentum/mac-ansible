// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zedf
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)

{
  // ################################################################
  // AI-related stuff
  // ################################################################
  "edit_predictions": {
    "provider": "sweep",
    "mode": "eager",

    // For some reason I couldn't make codestral to work yet
    "codestral": {
      "api_url": "https://codestral.mistral.ai/v1/fim/completions",
      "model": "codestral-latest",
    },

    "sweep": {
      "privacy_mode": true,
    },
  },

  "agent": {
    "default_model": {
      "provider": "openrouter",
      "model": "anthropic/claude-opus-4.6",
      "enable_thinking": true,
    },
    "inline_assistant_model": {
      "provider": "openrouter",
      "model": "anthropic/claude-haiku-4.6",
    },
    "commit_message_model": {
      "provider": "openrouter",
      "model": "anthropic/claude-haiku-4.6",
    },
    "thread_summary_model": {
      "provider": "openrouter",
      "model": "anthropic/claude-sonnet-4.6",
    },

    "favorite_models": [
      {
        "provider": "openrouter",
        "model": "anthropic/claude-opus-4.6",
        "enable_thinking": true,
      },
      {
        "provider": "openrouter",
        "model": "anthropic/claude-sonnet-4.6",
        "enable_thinking": true,
      },
      {
        "provider": "openrouter",
        "model": "anthropic/claude-haiku-4.6",
        "enable_thinking": false,
      },
    ],

    "enable_feedback": false,
    "profiles": {},
  },

  // ################################################################
  // UI customization
  // ################################################################

  "text_rendering_mode": "subpixel",

  // Themes
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Macchiato",
  },
  "icon_theme": "Catppuccin Latte",

  "ui_font_size": 16,
  "ui_font_weight": 400,
  "ui_font_family": "Roboto Flex",

  "buffer_font_size": 14,
  "buffer_font_weight": 400,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_fallbacks": ["JetBrains Mono", ".ZedMono"],
  "buffer_font_features": { "calt": true },
  "buffer_line_height": "standard",

  "tabs": {
    "file_icons": true,
    "close_position": "left",
    "git_status": true,
    "activate_on_close": "left_neighbour",
  },
  // 3 digits is actually enough to display 4
  "gutter": { "min_line_number_digits": 3 },

  "minimap": {
    "show": "auto",
    "current_line_highlight": "all",
  },

  // Terminal settings
  "terminal": {
    "blinking": "on",
    "cursor_shape": "bar",

    "font_size": 13,
    "font_weight": 600,
    "font_family": "JetBrainsMono Nerd Font",
    "font_fallbacks": ["JetBrains Mono", ".ZedMono"],
    "font_features": { "calt": true },
    "line_height": { "custom": 1.45 },
  },

  // Project panel
  "project_panel": {
    "dock": "left",
    "entry_spacing": "standard",
    "indent_size": 15,
  },

  "git": {
    "blame": { "show_avatar": true },
  },
  // Git panel
  "git_panel": {
    "dock": "right",
  },

  "theme_overrides": {
    "Catppuccin Macchiato": {
      "status_bar.background": "#3a1254",
    },
  },

  // ################################################################
  // Language-specific
  // ################################################################
  "file_types": {
    "Shell Script": ["*.zsh-theme"],
  },

  "extend_comment_on_newline": false,
  "languages": {
    "Python": {
      "language_servers": ["basedpyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_action": "source.organizeImports.ruff",
        },
        {
          "language_server": {
            "name": "ruff",
          },
        },
      ],
    },
    "YAML": {
      "show_whitespaces": "all",
      "auto_indent_on_paste": false,
      "use_on_type_format": false,
    },
  },

  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 110,
          "lint": { "extendSelect": ["I"] },
        },
      },
    },
  },

  // ################################################################
  // General
  // ################################################################
  // Extensions
  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin-icons": true,

    "ansible": true,
    "dockerfile": true,
    "git-firefly": true,
    "html": true,
    "helm": true,
    "ini": true,
    "lua": true,
    "make": true,
    "php": true,
    "proto": true,
    "sql": true,
    "terraform": true,
    "toml": true,
  },

  // Send only crash reports
  "telemetry": {
    "diagnostics": true,
    "metrics": false,
  },
}
